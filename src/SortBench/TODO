//#ifdef __amigaos4__
//#define clearMem(a, b) SetMem(a, 0, b)
//#else
//#define clearMem(a, b) memset(a, 0, b)
//#endif

VOID printArray(LONG *arr, LONG size);
VOID printList(struct MinList *list);

/****************************
 * NOTE: Debug Stuff REMOVE *
 ****************************/
///printArray
VOID printArray(LONG *arr, LONG size)
{
  UBYTE buffer[8];
  UBYTE result[256];
  LONG i;

  result[0] = 0;

  for (i = 0; i < size; i++)
  {
    sprintf(buffer, "%ld", arr[i]);
    if (i != 0) strcat(result, ", ");
    strcat(result, buffer);
  }

  puts(result);
}
///
///printList
VOID printList(struct MinList *list)
{
  UBYTE buffer[8];
  UBYTE result[1024] = {0};
  BOOL firstTime = TRUE;

  struct MyItem* i;
  for (i = (struct MyItem*) list->mlh_Head; i->node.mln_Succ; i = (struct MyItem*) i->node.mln_Succ)
  {
    sprintf(buffer, "%ld", i->val);
    if (firstTime) firstTime = FALSE; else strcat(result, ", ");
    strcat(result, buffer);
  }
  puts(result);
}
///

